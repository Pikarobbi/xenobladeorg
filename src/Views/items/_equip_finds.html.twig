{% if not itemData.finds.merchants is empty %}
    <div class="tableCell">
        <strong>HÃ¤ndler:</strong><br/>
        <ul>
            {% for merchant in itemData.finds.merchants %}
                <li>- {{ merchant.location }} ({{ merchant.chapter.name }})</li>
            {% endfor %}
        </ul>
    </div>
